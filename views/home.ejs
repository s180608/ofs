     padding-bottom: 1rem;
 }
 
 .header .shopping-cart .box .content span{
     color: var(--light-color);
     font-size: 1.6rem;
 
 }
 .header .shopping-cart .box .content .quantity{
     padding-left: 1rem;
 
 }
 
 .header .shopping-cart .total{
     font-size: 2.5rem;
     padding:1rem 0;
     text-align: center;
     color:var(--black);
 }
 
 .header .shopping-cart  .btn{
